button_color(base_color)
  background base_color
  border 1px solid darken(base_color, 10%)

  &:hover
    background darken(base_color, 10%)


html, body
  height 100%

body
  background: url(bg.jpg) no-repeat center center fixed;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  font-family: 'Open Sans', sans-serif;
  color: #fff;
  margin 0

a
  color #fff
  text-decoration underline
  cursor pointer

  &:hover
    text-decoration none

#container
  width:600px;
  float:right;
  margin 20px 15% 20px 0

  h1
    text-transform: uppercase;
    font-size:55px;
    line-height:60px;
    margin: 0.4em 0

  p
    font-size:18px;
    line-height:28px;

  .sign-container
    position relative
    margin 20px 0
    text-align center

    .stand-arrow
      background: url('stand-arrow.png') no-repeat -18px -4px;
      background-size: 400px 300px;
      width: 352px;
      height: 281px;
      position absolute
      top -248px
      left -372px

    .sign-button
      width 260px
      margin-right 5px
      padding 8px 12px
      display inline-block
      text-align center
      color #fff
      text-decoration none
      border-radius 3px
      text-transform uppercase
      font-size 14px

      .fa
        margin-right 5px

      &:active
        box-shadow: inset 0 3px 6px hsla(0, 0%, 0%, 0.20)

      &.facebook
        button_color(#47639e)

      &.twitter
        button_color(#4b9ed1)

  .signers-container
    text-align center
    padding-bottom 30px

    h1
      text-transform: uppercase;
      font-size:30px;
      line-height:40px;
      margin: 0.2em 0

    ul
      list-style none
      margin 20px 0
      padding 0

      li
        width 15%
        display inline-block
        margin 0.5% 2%

        img
          width 100%
          border-radius 50%
          border 3px solid #eee
          box-shadow 1px 1px 0 #444

  .footer
    padding-bottom 20px
    font-size 12px
    text-align center

@media only screen and (min-device-width : 100px) and (max-device-width : 640px)

  div#container
    width:90% !important;
    margin:0 auto;
    float:none
